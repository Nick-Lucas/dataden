{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "src/*": ["src/*"],
      "@dataden/*": ["../*/src"],
      "@dataden/core/dist/api-types": ["../core/src/api/api-types.ts"],
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  }
}
